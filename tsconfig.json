{
   "compilerOptions": {
      "target": "es2015",
      "module": "esnext",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "lib": [
         "es2022",
         "dom"
      ],
      "strict": true,
      "esModuleInterop": false,
      "outDir": "dist",
      "rootDir": "src",
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "emitDeclarationOnly": false,
      "experimentalDecorators": true,
      "paths": {
         "*": [
            "*",
            "../dist/*"
         ]
      }
   },
   "include": [
      "./src/**/*.ts"
   ],
   "exclude": [
      "node_modules"
   ]
}